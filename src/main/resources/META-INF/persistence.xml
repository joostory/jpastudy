<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence" version="2.1">
	<persistence-unit name="jpastudy">
		<class>net.joostory.jpastudy.ch02.Member</class>
		<class>net.joostory.jpastudy.ch03.Member</class>
		<class>net.joostory.jpastudy.ch05.Member</class>
		<class>net.joostory.jpastudy.ch05.Team</class>
		<class>net.joostory.jpastudy.ch06.Member</class>
		<class>net.joostory.jpastudy.ch06.Team</class>
		<class>net.joostory.jpastudy.ch06.Locker</class>
		<class>net.joostory.jpastudy.ch06.Product</class>
		<class>net.joostory.jpastudy.ch06.Order</class>
    <class>net.joostory.jpastudy.ch08.Member</class>
    <class>net.joostory.jpastudy.ch08.Team</class>
    <class>net.joostory.jpastudy.ch08.Member2</class>
    <class>net.joostory.jpastudy.ch08.Team2</class>
		<properties>

			<!-- 필수 속성 -->
			<property name="javax.persistence.jdbc.driver" value="org.h2.Driver"/>
			<property name="javax.persistence.jdbc.user" value="sa"/>
			<property name="javax.persistence.jdbc.password" value=""/>
			<property name="javax.persistence.jdbc.url" value="jdbc:h2:tcp://localhost/~/tests"/>
			<property name="hibernate.dialect" value="org.hibernate.dialect.H2Dialect" />

			<!-- 옵션 -->
			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.format_sql" value="true" />
			<property name="hibernate.use_sql_comments" value="true" />
			<property name="hibernate.id.new_generator_mappings" value="true" />

			<property name="hibernate.hbm2ddl.auto" value="create" />
		</properties>
	</persistence-unit>

</persistence>
